<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Top-->
                <LinearLayout
                    android:id="@+id/lyTop"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_corner_bottom"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:visibility="visible">

                        <!--Image & Name-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <!--User Image-->
                            <View
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/white" />

                            <!--User Name-->
                            <View
                                android:layout_width="120dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/round_bg_r5_white" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <!--Bottom-->
                <LinearLayout
                    android:id="@+id/lyBottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lyTop"
                    android:layout_marginTop="-30dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                        <!--Balance-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="@color/extraLightGray"
                                android:orientation="vertical">

                                <!--Balance Title-->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="18dp"
                                        android:layout_marginStart="5dp"
                                        android:background="@drawable/round_bg_r5_white"
                                        android:backgroundTint="?attr/shimmerTint" />

                                </LinearLayout>

                                <!-- Coins, Recharge Now -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <!--Coins-->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <View
                                            android:layout_width="50dp"
                                            android:layout_height="30dp"
                                            android:background="@drawable/round_bg_r5_white"
                                            android:backgroundTint="?attr/shimmerTint" />

                                        <View
                                            android:layout_width="80dp"
                                            android:layout_height="15dp"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/round_bg_r5_white"
                                            android:backgroundTint="?attr/shimmerTint" />

                                    </LinearLayout>

                                    <!-- Recharge -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <!--Image-->
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_width="23dp"
                                                android:layout_height="23dp"
                                                android:background="@drawable/ic_wallet"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <!-- Get more coins -->
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin8"
                                            android:orientation="vertical">

                                            <View
                                                android:layout_width="60dp"
                                                android:layout_height="20dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                            <View
                                                android:layout_width="90dp"
                                                android:layout_height="15dp"
                                                android:layout_marginTop="5dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!--Ad ViewPager with Dots indicator-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/round_bg"
                            android:orientation="vertical" />

                        <!--WalletHistory History, My Unlocked, Vouchers History-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="@color/extraLightGray"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                                <!--Coins-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <View
                                        android:layout_width="50dp"
                                        android:layout_height="30dp"
                                        android:background="@drawable/round_bg_r5_white"
                                        android:backgroundTint="?attr/shimmerTint" />

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="18dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/round_bg_r5_white"
                                        android:backgroundTint="?attr/shimmerTint" />

                                </LinearLayout>

                                <!--Vouchers-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <View
                                        android:layout_width="50dp"
                                        android:layout_height="30dp"
                                        android:background="@drawable/round_bg_r5_white"
                                        android:backgroundTint="?attr/shimmerTint" />

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="18dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/round_bg_r5_white"
                                        android:backgroundTint="?attr/shimmerTint" />

                                </LinearLayout>

                                <!--Gems-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <View
                                        android:layout_width="50dp"
                                        android:layout_height="30dp"
                                        android:background="@drawable/round_bg_r5_white"
                                        android:backgroundTint="?attr/shimmerTint" />

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="18dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/round_bg_r5_white"
                                        android:backgroundTint="?attr/shimmerTint" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!--Other-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="@color/extraLightGray"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <!--Notification-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_notification2"
                                                android:backgroundTint="?attr/shimmerTint"
                                                android:gravity="center_vertical" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.73"
                                            android:gravity="center_vertical">

                                            <View
                                                android:layout_width="120dp"
                                                android:layout_height="18dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.15"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                android:background="@drawable/round_bg_circle"
                                                android:backgroundTint="?attr/shimmerTint"
                                                android:gravity="center" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <!--Push Notification-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_push_notification"
                                                android:backgroundTint="?attr/shimmerTint"
                                                android:gravity="center_vertical" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.71"
                                            android:gravity="center_vertical">

                                            <View
                                                android:layout_width="155dp"
                                                android:layout_height="18dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.17"
                                            android:gravity="center">

                                            <androidx.appcompat.widget.SwitchCompat
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <!--Day/Night theme-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:visibility="visible">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_day_night"
                                                android:backgroundTint="?attr/shimmerTint"
                                                android:gravity="center_vertical" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.71"
                                            android:gravity="center_vertical">

                                            <View
                                                android:layout_width="160dp"
                                                android:layout_height="18dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.17"
                                            android:gravity="center">

                                            <androidx.appcompat.widget.SwitchCompat
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <!--Change Language-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_language"
                                                android:backgroundTint="?attr/shimmerTint"
                                                android:gravity="center_vertical" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.5"
                                            android:gravity="center_vertical">

                                            <View
                                                android:layout_width="100dp"
                                                android:layout_height="18dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.38"
                                            android:gravity="center_vertical">

                                            <View
                                                android:layout_width="100dp"
                                                android:layout_height="18dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <!--Clear Cache-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_brush"
                                                android:backgroundTint="?attr/shimmerTint"
                                                android:gravity="center_vertical" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.76"
                                            android:gravity="center_vertical"
                                            android:orientation="vertical">

                                            <View
                                                android:layout_width="80dp"
                                                android:layout_height="18dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                            <View
                                                android:layout_width="100dp"
                                                android:layout_height="15dp"
                                                android:layout_marginTop="3dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_arrow_right"
                                                android:backgroundTint="?attr/shimmerTint"
                                                android:gravity="center_vertical" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <!--Privacy Policy-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_notification"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.76"
                                            android:gravity="center_vertical">

                                            <View
                                                android:layout_width="100dp"
                                                android:layout_height="18dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_arrow_right"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <!--About Us-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_about_us"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.76"
                                            android:gravity="center_vertical">


                                            <View
                                                android:layout_width="80dp"
                                                android:layout_height="18dp"
                                                android:background="@drawable/round_bg_r5_white"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.12"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:background="@drawable/ic_arrow_right"
                                                android:backgroundTint="?attr/shimmerTint" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>