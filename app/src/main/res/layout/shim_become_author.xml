<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/whitelightbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12"
                android:gravity="center">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_bg"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.88"
                android:gravity="center_vertical">

                <View
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_bg_r5_white"
                    android:backgroundTint="?attr/shimmerTint"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!--Bottom-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Author Image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="15dp">

                        <!--User image Edit-->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:backgroundTint="?attr/shimmerTint" />

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_edit2"
                                android:backgroundTint="?attr/shimmerTint"
                                android:gravity="center_vertical" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <!-- Author & Bank Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_shape_middle"
                    android:backgroundTint="?attr/backgroundcolor"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Author Details -->

                        <!-- Author Name -->
                        <View
                            android:layout_width="100dp"
                            android:layout_height="15dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="?attr/shimmerTint" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/editTextHeight"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittext_bg_r5"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="150dp"
                                android:layout_height="18dp"
                                android:layout_marginHorizontal="8dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="?attr/whitelightbackground" />

                        </LinearLayout>

                        <!-- Author Address -->
                        <View
                            android:layout_width="85dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="?attr/shimmerTint" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittext_bg_r5"
                            android:gravity="top"
                            android:minHeight="70dp">

                            <View
                                android:layout_width="150dp"
                                android:layout_height="18dp"
                                android:layout_margin="8dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="?attr/whitelightbackground" />

                        </LinearLayout>

                        <!-- Author Email -->
                        <View
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="?attr/shimmerTint" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/editTextHeight"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittext_bg_r5"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="150dp"
                                android:layout_height="18dp"
                                android:layout_marginHorizontal="8dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="?attr/whitelightbackground" />

                        </LinearLayout>

                        <!-- Author Password -->
                        <View
                            android:layout_width="100dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="?attr/shimmerTint" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/editTextHeight"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittext_bg_r5"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="150dp"
                                android:layout_height="18dp"
                                android:layout_marginHorizontal="8dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="?attr/whitelightbackground" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="23dp"
                            android:background="?attr/splitlineDark"
                            android:visibility="visible" />

                        <!-- Author Bank Details -->
                        <View
                            android:layout_width="100dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="?attr/shimmerTint" />

                        <!-- BankName -->
                        <View
                            android:layout_width="150dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="?attr/shimmerTint" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/editTextHeight"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittext_bg_r5"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="150dp"
                                android:layout_height="18dp"
                                android:layout_marginHorizontal="8dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="?attr/whitelightbackground" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>